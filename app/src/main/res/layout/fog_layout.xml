<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterLayoutActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fog_ima"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/fog_LinearLayout"
        android:src="@mipmap/menhera_17" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fog_LinearLayout"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册邮箱"
            android:textSize="18sp"
            android:textColor="#8c404646"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:ems="18"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fog_but1"
            android:text="获取验证码"
            android:background="#8c0bb4c4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="新密码"
            android:inputType="textPassword"
            android:ems="18"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:ems="18"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fog_but2"
            android:text="找回密码"
            android:background="#8c0bb4c4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>
